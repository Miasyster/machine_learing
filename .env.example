# Airflow环境变量配置示例
# 复制此文件为.env并填入实际值

# Airflow用户ID（Linux/Mac需要设置）
AIRFLOW_UID=50000

# Airflow项目目录
AIRFLOW_PROJ_DIR=.

# Airflow Web界面用户凭据
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin123

# 数据库配置
POSTGRES_USER=ml_user
POSTGRES_PASSWORD=ml_password_change_me
POSTGRES_DB=ml_data

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_STARTTLS=true
SMTP_SSL=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_MAIL_FROM=airflow@yourcompany.com

# API密钥配置
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# 通知配置
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 外部服务配置
REDIS_PASSWORD=redis_password_change_me
MLFLOW_TRACKING_URI=http://mlflow:5000

# 安全配置
SECRET_KEY=your-very-long-secret-key-change-in-production
FERNET_KEY=your-fernet-key-for-encryption

# 日志级别
AIRFLOW_LOGGING_LEVEL=INFO
CELERY_LOGGING_LEVEL=INFO

# 性能配置
AIRFLOW_WORKER_CONCURRENCY=4
AIRFLOW_SCHEDULER_HEARTBEAT_SEC=5
AIRFLOW_SCHEDULER_MAX_TIS_PER_QUERY=512

# 开发环境配置
ENVIRONMENT=development
DEBUG=false

# 数据路径配置
ML_DATA_PATH=./data
ML_MODELS_PATH=./models
ML_LOGS_PATH=./logs/ml

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 监控配置
MONITORING_ENABLED=true
METRICS_EXPORT_INTERVAL=60
HEALTH_CHECK_INTERVAL=300

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 并发配置
MAX_ACTIVE_RUNS=3
MAX_ACTIVE_TASKS=16
PARALLELISM=32

# 超时配置
TASK_TIMEOUT=3600
DAG_TIMEOUT=7200
SENSOR_TIMEOUT=600