# Airflow环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ===========================================
# Airflow基础配置
# ===========================================
AIRFLOW_ENV=development
DEBUG_MODE=true

# Airflow数据库配置（如果使用外部数据库）
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow

# Airflow Web服务器配置
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here
AIRFLOW__WEBSERVER__BASE_URL=http://localhost:8080

# ===========================================
# 数据存储路径配置
# ===========================================
ML_DATA_PATH=/opt/airflow/data
ML_RAW_DATA_PATH=/opt/airflow/data/raw
ML_PROCESSED_DATA_PATH=/opt/airflow/data/processed
ML_FEATURES_DATA_PATH=/opt/airflow/data/features

# ===========================================
# Binance API配置
# ===========================================
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL配置（用于存储处理后的数据）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ml_database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Redis配置（用于缓存，可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# InfluxDB配置（用于时序数据，可选）
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_DB=ml_timeseries
INFLUXDB_USER=influxdb
INFLUXDB_PASSWORD=your-influxdb-password

# ===========================================
# 邮件通知配置
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===========================================
# Slack通知配置（可选）
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===========================================
# 监控配置（可选）
# ===========================================
# Prometheus配置
PROMETHEUS_GATEWAY_URL=http://localhost:9091

# Grafana配置
GRAFANA_DASHBOARD_URL=http://localhost:3000

# ===========================================
# 安全配置
# ===========================================
# JWT密钥（用于API认证）
JWT_SECRET_KEY=your-jwt-secret-key

# 数据加密密钥
DATA_ENCRYPTION_KEY=your-data-encryption-key

# ===========================================
# 性能配置
# ===========================================
# 并发任务数量
MAX_PARALLEL_TASKS=4

# 任务超时时间（分钟）
TASK_TIMEOUT_MINUTES=60

# 重试延迟时间（分钟）
RETRY_DELAY_MINUTES=5

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===========================================
# 开发环境特定配置
# ===========================================
# 是否启用调试模式
ENABLE_DEBUG=true

# 是否使用样本数据
USE_SAMPLE_DATA=true
SAMPLE_DATA_SIZE=100

# 是否跳过某些检查（仅开发环境）
SKIP_DATA_VALIDATION=false
SKIP_QUALITY_CHECKS=false